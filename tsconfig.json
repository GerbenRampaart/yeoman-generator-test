{
    "compilerOptions": {
        "lib": [
          "es2020", 
          "DOM"
        ],
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "outDir": "./lib",
        "rootDir": "src",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "**/__tests__/*"
    ]
}
